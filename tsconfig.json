{
  "compilerOptions": {
    "outDir": "./dist",  
    "rootDir": "./src",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/*",
    "./src/**/*",
    "src/**/*",
    "migrations/**/*.ts",
],
  
  "exclude": ["node_modules"]
}